{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-full flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Create your account</h2>
            </div>

            {% for children in registrationForm %}
                {% if form_errors(children) is not empty %}
                    <div class="rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 8a6 6 0 11-12 0 6 6 0 0112 0zm-7-3a1 1 0 00-2 0v4a1 1 0 001 1h2a1 1 0 000-2h-1V5z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800">
                                    {{ form_errors(children) }}
                                </h3>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="rounded-md bg-red-50 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 8a6 6 0 11-12 0 6 6 0 0112 0zm-7-3a1 1 0 00-2 0v4a1 1 0 001 1h2a1 1 0 000-2h-1V5z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">
                                {{ flash_error }}
                            </h3>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {{ form_start(registrationForm, { 'attr': { 'class': 'mt-8 space-y-6 bg-white p-8 rounded-lg shadow-lg' } }) }}
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    {{ form_label(registrationForm.firstname, 'First Name', { 'label_attr': { 'class': 'sr-only' } }) }}
                    {{ form_widget(registrationForm.firstname, { 'attr': { 'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'First Name' } }) }}
                </div>
                <div>
                    {{ form_label(registrationForm.lastname, 'Last Name', { 'label_attr': { 'class': 'sr-only' } }) }}
                    {{ form_widget(registrationForm.lastname, { 'attr': { 'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Last Name' } }) }}
                </div>
                <div>
                    {{ form_label(registrationForm.email, 'Email', { 'label_attr': { 'class': 'sr-only' } }) }}
                    {{ form_widget(registrationForm.email, { 'attr': { 'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Email' } }) }}
                </div>
                <div>
                    {{ form_label(registrationForm.plainPassword, 'Password', { 'label_attr': { 'class': 'sr-only' } }) }}
                    {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Password' } }) }}
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' } }) }}
                    {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', { 'label_attr': { 'class': 'ml-2 block text-sm text-gray-900' } }) }}
                </div>
            </div>

            <div>
                <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
